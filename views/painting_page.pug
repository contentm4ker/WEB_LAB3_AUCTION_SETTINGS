extends layout

block content
    p#pic_id(hidden)= id
    div.w3-bar.w3-indigo.w3-display-topleft
        i.w3-bar-item.material-icons(onclick="window.location.href='https://localhost/pics';",
        | style="cursor: pointer") arrow_back
        - if (!inAuct) {
            div.w3-bar-item.w3-hover-cyan(onclick="addToAuction();") Выставить на аукцион
        - } else {
            div.w3-bar-item.w3-hover-cyan(onclick="removeFromAuction();") Убрать с аукциона
        -}
        div.w3-bar-item.w3-hover-cyan(onclick="document.getElementById('modal-inp').style.display='block'") Изменить информацию
        div.w3-display-topright.w3-bar-item
            div.w3-bar-item= 'Стартовая цена: ' + startPrice
            div.w3-bar-item= 'Минимальный шаг: ' + sMin
            div.w3-bar-item= 'Максимальный шаг: ' + sMax

    div#modal-inp.w3-modal
        div.w3-modal-content.w3-card-4.w3-animate-zoom(style="max-width:600px")
            header.w3-container.w3-indigo
                span.w3-button.w3-display-topright(onclick="document.getElementById('modal-inp').style.display='none'") &times;
                h2.w3-center Изменение данных картины
            div.w3-container
                div.w3-section
                    label
                        b Автор
                    input#inp1.w3-input.w3-border.w3-margin-bottom(type="text", value=author, name="author", required)
                    label
                        b Название
                    input#inp2.w3-input.w3-border.w3-margin-bottom(type="text", value=name, name="name", required)
                    label
                        b Начальная цена
                    input#inp3.w3-input.w3-border.w3-margin-bottom(type="number", value=startPrice,
                    | name="startPrice", required)
                    label
                        b Минимальный шаг
                    input#inp4.w3-input.w3-border.w3-margin-bottom(type="number", value=sMin, name="sMin", required)
                    label
                        b Максимальный шаг
                    input#inp5.w3-input.w3-border.w3-margin-bottom(type="number", value=sMax, name="sMax", required)
                    label
                        b Описание
                    textarea#inp6.w3-input.w3-border.w3-margin-bottom(name="discription", rows="5",
                    | required)= discription
                    button#changePicInfo.w3-button.w3-block.w3-indigo.w3-section.w3-padding(onclick="changePicInfo();") Подтвердить

    div.w3-display-middle
        div.w3-container.w3-cell
            div#pic.w3-card-4.w3-animate-zoom
                div.w3-container.w3-center.w3-blue
                    - var nm = author + " / " + name;
                    p.shadow-text= nm
                img.w3-hover-opacity.w3-border.w3-padding(src=imgPath, width=300, style="cursor:zoom-in;",
                | onclick="document.getElementById('modal01').style.display='block'")
                div.w3-container.w3-center.w3-deep-purple
                    - if (!inAuct) {
                    p.shadow-text Не участвует в аукционе
                    - } else {
                    p.shadow-text Участвует в аукционе
                    -}

        div.w3-container.w3-cell.w3-animate-zoom.w3-panel.w3-blue
            p.w3-large.w3-opacity(align="justify")= discription


    div#modal01.w3-modal(onclick="this.style.display='none'")
        div.w3-modal-content.w3-animate-zoom
            img(src=imgPath, style="width:100%")

    script(src="/javascripts/painting_page.js")
    link(rel='stylesheet', href='/stylesheets/painting_page.css')



